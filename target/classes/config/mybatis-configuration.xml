<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- 마이바티스의  환경설정파일 -->
<configuration>
	<!-- 클래스 별칭 설정 :매퍼파일에서 별칭으로 사용하고자 할때(properties태그가 typeAliases태그보다 위에 위치) -->
	<typeAliases>
		<typeAlias type="com.nodearchive.springapp.service.impl.AttendanceDTO" alias="AttendanceDTO"/>
	</typeAliases>
	
	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑)의 위치정보 설정 -->
	<mappers>
		<mapper resource="mappers/address.xml"/>
		<mapper resource="mappers/schedule.xml"/>
		<mapper resource="mappers/project.xml"/>
		<mapper resource="mappers/task.xml"/>
		<mapper resource="mappers/report.xml"/>
		<mapper resource="mappers/mail.xml"/>
		<mapper resource="mappers/notice.xml"/>
		<mapper resource="mappers/chat.xml"/>
		<mapper resource="mappers/attendance.xml"/>
		<mapper resource="mappers/approval.xml"/>
		<mapper resource="mappers/admin.xml"/>
		
	</mappers>
</configuration>